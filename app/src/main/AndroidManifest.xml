<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ceylinco.ceylincocustomerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name="com.ceylinco.ceylincocustomerapp.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ceylinco.ceylincocustomerapp.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">
        </activity>

        <activity
            android:name="com.ceylinco.ceylincocustomerapp.NewInsuranceVehicleListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ceylinco.ceylincocustomerapp.NewInsuranceVehicleListActivity" />

        </activity>

        <activity
            android:name="com.ceylinco.ceylincocustomerapp.InsuranceTypesActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ceylinco.ceylincocustomerapp.InsuranceTypesActivity" />

        </activity>

    </application>

</manifest>