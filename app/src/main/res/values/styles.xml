<resources>

    <!-- Base application theme. -->
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">false</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <!-- Text Appearance -->
    <style name="BaseTextLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="BaseTextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="BaseTextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!-- TextView Style -->
    <style name="AppTextView" parent="android:Widget.TextView">
        <item name="android:background">@drawable/cornered_textview</item>
        <item name="android:textColor">@color/textHintColor</item>
        <item name="android:textSize">@dimen/text_and_edit_text_sizes</item>
    </style>

    <!-- Edit Text common -->
    <style name="AppEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/cornered_textview</item>
        <item name="android:textColorHint">@color/textHintColor</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_and_edit_text_sizes</item>
    </style>

    <!-- Button Common -->
    <style name="AppButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/cornered_button</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/button_text_sizes</item>
    </style>

    <!-- Button Small -->
    <style name="AppButtonSmall" parent="android:Widget.Button.Small">
        <item name="android:background">@drawable/cornered_button_yellow</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/button_text_size_small</item>
    </style>

</resources>
