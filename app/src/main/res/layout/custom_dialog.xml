<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/pop_up_background_color"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/txtClaimDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:textColor="@color/colorPrimary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="1"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgApprovedStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:padding="@dimen/activity_horizontal_margin"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="center">

            <TextView
                android:id="@+id/txtApproved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Approved | 12000"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/txtRemark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:scrollbars = "vertical"
                android:text="Details details details Details details details Details details details Details details details"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/txtTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="For more details contact the branch - 6435363739"/>

    <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLOSE"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@color/textColorPrimary"/>

</LinearLayout>