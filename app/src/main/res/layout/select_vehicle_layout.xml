<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_space" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_space" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/policyNoTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            style="@style/AppTextView"
            android:gravity="center_vertical"
            android:text="@string/policy_number"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>

        <ImageView
            android:id="@+id/imgPolicyNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="@color/spinner_color"
            android:padding="@dimen/standard_space"
            android:src="@drawable/ic_down"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_space" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/vehicleNoTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            style="@style/AppTextView"
            android:gravity="center_vertical"
            android:text="@string/vehicle_number"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>

        <ImageView
            android:id="@+id/imgVehicleNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="@color/spinner_color"
            android:padding="@dimen/standard_space"
            android:src="@drawable/ic_down"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/AppButton"
        android:text="@string/text_next"/>

</LinearLayout>